require 'hoe'

require './lib/ringy_dingy.rb'

Hoe.plugin :seattlerb
Hoe.plugin :isolate

Hoe.spec 'RingyDingy' do |p|
  p.developer 'Eric Hodel', 'drbrain@segment7.net'

  self.readme_file  = 'README.rdoc'
  self.history_file = 'History.rdoc'

  p.extra_deps << ['ZenTest', '>= 3.4.0']
end

